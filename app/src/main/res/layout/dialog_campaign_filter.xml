<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/campaign_list_filter_width"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/campaign_list_filter_title_padding"
        android:elevation="8dp">

        <ImageView
            android:layout_width="@dimen/campaign_list_filter_title_img_width"
            android:layout_height="@dimen/campaign_list_filter_title_img_height"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_baseline_filter_alt_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="필터 적용"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:textSize="@dimen/campaign_list_filter_title_text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/view_divide_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/campaign_list_filter_title_padding"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/radioType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/btnTypeAll"
                android:layout_width="@dimen/campaign_list_filter_radio_width"
                android:layout_height="@dimen/campaign_list_filter_radio_height"
                android:checked="true" />

            <RadioButton
                android:id="@+id/btnOpenType"
                android:layout_width="@dimen/campaign_list_filter_radio_width"
                android:layout_height="@dimen/campaign_list_filter_radio_height"/>

            <RadioButton
                android:id="@+id/btnGroupType"
                android:layout_width="@dimen/campaign_list_filter_radio_width"
                android:layout_height="@dimen/campaign_list_filter_radio_height" />

        </RadioGroup>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/campaign_list_filter_radio_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="2dp"
                    android:paddingTop="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/shape_campaign_type_open"
                    android:text="공개형"
                    android:textSize="@dimen/campaign_type_text_size"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/shape_campaign_type_group"
                    android:text="그룹형"
                    android:textSize="@dimen/campaign_type_text_size"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" 모두 보기"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/campaign_list_filter_radio_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/shape_campaign_type_open"
                    android:text="공개형"
                    android:textSize="@dimen/campaign_type_text_size"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" 만 보기"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/campaign_list_filter_radio_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/shape_campaign_type_group"
                    android:text="그룹형"
                    android:textSize="@dimen/campaign_type_text_size"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" 만 보기"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>